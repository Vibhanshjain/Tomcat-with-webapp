pipeline {
    agent any

    tools {
        maven 'Maven'     // Your Maven installation name in Jenkins
        jdk 'JDK'      // Your JDK installation name in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Vibhanshjain/Tomcat-with-webapp.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy WAR') {
            steps {
                sh 'sudo cp target/MymavenWebApp01.war /opt/tomcat/webapps/'
            }
        }
    }
}
